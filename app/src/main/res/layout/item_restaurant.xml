<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivRestoImg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/veggie_grill" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivRestoImg"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:paddingLeft="6dp"
            android:src="@drawable/star" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/ivStar"
            android:layout_toEndOf="@id/ivStar"
            android:fontFamily="serif"
            android:text="VeggieGrill"
            android:id="@+id/tvRestoNa"
            android:textColor="@color/colorRoughBlack"
            android:textSize="24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_margin="14dp"
            android:id="@+id/ivNav"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/navigation"/>

    </RelativeLayout>
</RelativeLayout>